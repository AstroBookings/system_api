{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/../src/api/$1",
    "^@core/(.*)$": "<rootDir>/../src/core/$1",
    "^@shared/(.*)$": "<rootDir>/../src/shared/$1",
    "^@src/(.*)$": "<rootDir>/../src/$1"
  }
}
